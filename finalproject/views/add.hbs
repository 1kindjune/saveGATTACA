<script>
$( "form" ).submit(function( event ) {
  	var incorrectDNA = false;
  	var dnaSeq = document.getElementById('dnaSeq').value;
  	alert("this DNA" dnaSeq);
  	for (var x = 0; x < dnaSeq.length; x++){
  		if (dnaSeq.charAt(x).toUpperCase() !== "A" ||
  			dnaSeq.charAt(x).toUpperCase() !== "T" ||
  			dnaSeq.charAt(x).toUpperCase() !== "G" ||
  			dnaSeq.charAt(x).toUpperCase() !== "C"){
  			incorrectDNA = true;
  			}
  	}
  	if (incorrectDNA){
  		alert("Incorrect DNA Sequence, must only contain (A, T, C, G)");
		event.preventDefault();
	}
});
</script>

